@page
@model Web_Application.Pages.ProfileModel
@using Helpers
@{
}

<div class="container mt-5">
    <div class="row">
        <div class="col-3">
            <div class="text-center">
                <img src="https://via.placeholder.com/150" class="rounded-circle" alt="User Image" width="150">
                <h3 class="mt-3">@Model.CurrentUser.Username</h3>
            </div>
        </div>
        <div class="col-4">
        </div>
        <div class="col-4 d-flex flex-column justify-content-end">
            <div class="row">
                <div class="col-4">
                    <p class="text-muted mb-0">Reviews</p>
                    <h3>@Model.Reviews.Count</h3>
                </div>
                <div class="col-4">
                    <p class="text-muted mb-0">Following</p>
                    <h3>@Model.CurrentUser.Following.Count</h3>
                </div>
                <div class="col-4">
                    <p class="text-muted mb-0">Followers</p>
                    <h3>@Model.CurrentUser.Followers.Count</h3>
                </div>
            </div>
            <div class="row">
                <div class="col-12">
                    <form method="get" asp-area="" asp-page="@PageRoutes.EditProfile" asp-route-id="@Model.CurrentUser.Id">
                        <button type="submit" class="btn btn-primary w-100">Edit My Profile</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="container mt-5">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 order-sm-first order-last">
                <h2>Reviews</h2>
                <div class="">
                    @foreach (var r in Model.Reviews)
                    {
                        @await Html.PartialAsync("_ReviewCardPartial", model: r);
                    }
                </div>
            </div>

            <div class="col-md-4">
                <h2>Average Rating</h2>
                <div class="">
                    <div class="card">
                        <a class="text-decoration-none text-dark">

                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@Model.AverageRating</h5>
                                    <!--<p class="card-text">unit.Type</p>-->
                                </div>


                            </div>
                        </a>
                    </div>
                </div>
                <h2>Recent Activity</h2>
                <div class="">
                    @foreach (var unit in Model.LastReviewedMusicUnits)
                    {
                        <div class="card">
                            <a class="text-decoration-none text-dark" asp-page="@PageRoutes.SingleArtist" asp-route-id="@unit.Id">
                                <div class="row no-gutters">

                                    <div class="col-md-4">
                                        <img src="/@unit.Image" class="card-img" alt="...">
                                    </div>
                                    <div class="col-md-8">
                                        <div class="card-body">
                                            <h5 class="card-title">@unit.Name</h5>
                                            <p class="card-text">@unit.Type</p>
                                        </div>
                                    </div>

                                </div>
                            </a>
                        </div>
                                          }
                </div>

            </div>
        </div>
    </div>
</div>



