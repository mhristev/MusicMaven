@model Models.CreateReviewModel
@using Helpers

<!-- Review Modal -->
<button type="button" class="btn btn-secondary btn-lg active" data-bs-toggle="modal" data-bs-target="#reviewModal">
    Write a Review
</button>
<div class="modal fade show" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body text-start">
                <form method="post" asp-page="@PageRoutes.CreateReview" asp-page-handler="CreateReview" asp-route-musicUnitId="MusicUnitId" asp-route-reviewDTO="@Model.ReviewDTO" asp-route-rating="@Model.Rating">
                    <input type="hidden" asp-for="MusicUnitId" />
                    <div class="mb-3">
                        <label asp-for="ReviewDTO.Title" class="form-label">Title</label>
                        <input asp-for="ReviewDTO.Title" type="text" class="form-control" id="reviewTitle">
                        <span asp-validation-for="ReviewDTO.Title" class="text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="ReviewDTO.Description" class="form-label">Description</label>
                        <textarea asp-for="ReviewDTO.Description" class="form-control" id="reviewDescription" rows="3"></textarea>
                        <span asp-validation-for="ReviewDTO.Description" class="text text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Rating" class="form-label">Rating</label>
                        <input asp-for="Rating" class="form-control" type="text" data-val="true" data-val-regex-pattern="^[1-9](\,[0-9])?$|^10(\,0)?$" data-val-regex="Please enter a valid rating between 1 and 10 in the format 0,F1" />
                        <span asp-validation-for="Rating" class="text text-danger"></span>
                    </div>

                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Submit Review</button>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>


