@page
@model Web_Application.Pages.SignInModel
@{

}

<div class="d-flex justify-content-center">
    <div class="container" style="max-width: 400px;">
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger" role="alert">
                @Html.ValidationMessage("IvalidCredentials", "Invalid email or password")
            </div>
        }
        <form method="post">

            <div class="text-center mb-3">
                <h5>Login</h5>
            </div>


            <div class="form-outline mb-4">
                <label class="form-label" asp-for="@Model.LoginModel.Email"> Email </label>
                <input type="email" id="loginEmail\" class="form-control" asp-for="@Model.LoginModel.Email" />
                <span asp-validation-for="@Model.LoginModel.Email" class="text text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" asp-for="@Model.LoginModel.Password"> Password </label>
                <input type="password" id="loginPassword" class="form-control" asp-for="@Model.LoginModel.Password" />
                <span asp-validation-for="@Model.LoginModel.Password" class="text text-danger"></span>
            </div>

            <div class="row mb-4">
                <div class="col d-flex justify-content-center">
                    <div class="form-check mb-3 mb-md-0">
                        <input class="form-check-input" type="checkbox" value="" id="loginCheck" name="loginchecked" />
                        <label class="form-check-label" for="loginCheck"> Remember me </label>
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block mb-4">Sign in</button>

        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

    