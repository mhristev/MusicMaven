@page
@model Web_Application.Pages.SingleArtistModel
@{
}


<div class="container">
	<div class="container">
		<div class="row"></div>
		<div class="row">
			<div class="col-md-auto">
				<img src="~/images//tyler.jpeg" class="singleUnitImage" />
			</div>
			<div class="col d-flex flex-column">
			
					<div class="mt-auto" >
						<h2>Tyler,The Creator</h2>
					</div>
				
			</div>
			<div class="col d-flex flex-column text-center">
				<div class="row mt-auto">
					<h4>Average rating:</h4>
				</div>
				<div class="row">
					<h2>8/10 *</h2>
				</div>
				<div class="row">
					<h3>Total reviews: 1289</h3>
				</div>
				<div class="row d-flex align-items-center">
                    <!--
					<a class="btn btn-secondary btn-lg active" asp-page="/WriteReview">Review</a>
                     Button trigger modal -->
                    <button type="button" class="btn btn-secondary btn-lg active" data-bs-toggle="modal" data-bs-target="#reviewModal">
                        Write a Review
                    </button>

                    <!-- Review Modal -->
                    <div class="modal fade show" id="reviewModal" tabindex="-1" aria-labelledby="reviewModalLabel" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="reviewModalLabel">Write a Review</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                                <div class="modal-body text-start">
                                    <form method="post">
                                        <div class="mb-3">
                                            <label asp-for="ReviewDTO.Title" class="form-label">Title</label>
                                            <input asp-for="ReviewDTO.Title" type="text" class="form-control" id="reviewTitle">
                                            <span asp-validation-for="ReviewDTO.Title" class="text text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="ReviewDTO.Content" class="form-label">Description</label>
                                            <textarea asp-for="ReviewDTO.Content" class="form-control" id="reviewDescription" rows="3"></textarea>
                                            <span asp-validation-for="ReviewDTO.Content" class="text text-danger"></span>
                                        </div>
                                        <div class="mb-3">
                                            <label asp-for="ReviewDTO.Rating" class="form-label">Rating</label>
                                            <select asp-for="ReviewDTO.Rating" class="form-select" id="reviewRating">
                                                <option value="">Choose a rating...</option>
                                                <option value="5">5.1</option>
                                                <option value="4">4.3</option>
                                                <option value="3">3.9</option>
                                                <option value="2">2.1</option>
                                                <option value="1">1.9</option>
                                            </select>
                                            <span asp-validation-for="ReviewDTO.Rating" class="text text-danger"></span>
                                        </div>
                                        
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-primary">Submit Review</button>
                                        </div>
                                    </form>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                    @section Scripts {
                        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
                    }

				</div>
			</div>
		</div>
	</div>
</div>