<div class="row mt-5">
    <div class="col-12 text-center">
        <h1 class="display-4 text-purple">MusicMaven</h1>
        <p class="lead">
            A web-based social platform for music lovers to share
            opinions and thoughts on the latest album releases,
            songs, and artists.
        </p>
    </div>
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 order-sm-first order-last">
            <h2>Reviews</h2>
            <div class="">
                @foreach (var r in Model.Reviews)
                {
                    <div class="card">

                        <div class="row reviewCardTop">

                            <div class="col-4 col-md-auto">
                                <img src="/@r.MusicUnit.Image"
                                     class="img-fluid rounded-start reviewImg"
                                     alt="Album cover image"
                                     id="test-image" />
                            </div>

                            <div class="col-8 col-md-auto">
                                <div class="row">
                                    <p class="card-subtitle mb-1 text-muted">
                                        @r.Creator.Username
                                    </p>
                                </div>
                                <h5 class="card-title">
                                    @r.Title
                                </h5>
                                <h6 class="card-subtitle mb-2 text-muted">
                                    @r.MusicUnit.Name
                                </h6>
                                <h7 class="card-subtitle mb-2 text-muted">
                                    @r.MusicUnit.Type
                                </h7>
                            </div>

                            <div class="col-12 mt-3">
                                <div class="card-text d-flex align-items-center h-100 justify-content-end text-end">
                                    @r.Rating/10
                                </div>
                            </div>

                        </div>

                        <div class="row">
                            <div class="col">
                                <div class="card-body">
                                    <p class="card-text" id="long-text">
                                        @r.Description
                                    </p>

                                    <p class="card-text">
                                        <small class="text-muted">@r.LikedBy.Count Likes</small>
                                    </p>
                                    <form method="post" asp-page-handler="Like" asp-route-reviewId="@r.Id">
                                        <button class="btn btn-primary" type="submit">Like</button>
                                    </form>

                                </div>
                            </div>
                        </div>

                    </div>
                }
            </div>
        </div>

        <div class="col-md-4">
            <h2>Top Artists</h2>
            <div class="">
                @foreach (var artist in Model.Artists)
                    {
                    <div class="card">
                        <a class="text-decoration-none text-dark" asp-page="Single/SingleArtist" asp-route-id="@artist.Id">
                            <div class="row no-gutters">

                                <div class="col-md-4">
                                    <img src="/@artist.Image" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@artist.Name</h5>
                                        <p class="card-text">@artist.ArtistType</p>
                                    </div>
                                </div>

                            </div>
                            </a>
                    </div>
                    }
                </div>

            <h3>New releases</h3>
            <div>
                @foreach (var album in Model.NewAlbums)
                {
                    <div class="card">
                        <a class="text-decoration-none text-dark" asp-page="Single/SingleAlbum" asp-route-id="@album.Id">
                            <div class="row no-gutters">

                                <div class="col-md-4">
                                    <img src="/@album.Image" class="card-img" alt="...">
                                </div>
                                <div class="col-md-8">
                                    <div class="card-body">
                                        <h5 class="card-title">@album.Name</h5>
                                        <p class="card-text">@album.Genre</p>
                                    </div>
                                </div>

                            </div>
                        </a>
                    </div>
                }
                
            </div>
        </div>
    </div>
</div>


